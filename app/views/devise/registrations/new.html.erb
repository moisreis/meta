<%#
  # Partial: new.html
  # Date: 11/12/2025
  # Author: Moisés Reis
  # Package: Meta
  #
  # Description: Renders the user registration page for Devise.
  #              Uses nested partials to compose a cohesive authentication layout with reusable blocks.
  #
  # Usage: - What: Displays the registration form, background illustration, and container layout.
  #                Wraps the entire structure inside the wrapper for consistent presentation.
  #        - How: Calls nested partials for layout and form input fields.
  #               Submits the registration form through Devise's `registration_path` helper.
  #        - Why: Maintains visual and functional consistency across all authentication-related views.
  %>
<%= render 'partials/route/auth/wrapper' do %>
  <%= render 'partials/route/auth/background', bg_path: "pixeltrue/finance-app-1-67.svg" %>
  <%= render 'partials/route/auth/container', welcome_message: "Seja bem-vindo à Meta".html_safe, welcome_feedback: "Crie sua conta em poucos minutos e desbloqueie o potencial máximo da sua carteira de investimentos" do %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :email,
                 label: "Informe seu e-mail",
                 field_type: :email_field,
                 placeholder: "seuemail@email.com",
                 desc: "Informe um e-mail válido",
                 icon_name: "mail"
      %>
      <%= render 'partials/modules/separator' %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :first_name,
                 label: "Primeiro nome",
                 field_type: :text_field,
                 placeholder: "Maria",
                 desc: "Informe seu primeiro nome",
                 icon_name: "person_text"
      %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :last_name,
                 label: "Último nome",
                 field_type: :text_field,
                 placeholder: "Silva",
                 desc: "Informe seu último nome",
                 icon_name: "person_text"
      %>
      <%= render 'partials/modules/separator' %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :password,
                 label: "Crie uma senha",
                 field_type: :password_field,
                 placeholder: "SuaSenha123@",
                 desc: "Crie uma senha segura com, pelo menos, 6 caracteres",
                 icon_name: "passkey"
      %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :password_confirmation,
                 label: "Confirme sua senha",
                 field_type: :password_field,
                 placeholder: "SuaSenha123@",
                 desc: "Repita sua senha",
                 icon_name: "passkey"
      %>
      <%= f.submit "Criar conta", class: "button w-full" %>
    <% end %>
  <% end %>
<% end %>