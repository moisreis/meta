<%#
  # Partial: new.html
  # Date: 11/25/2025
  # Author: Moisés Reis
  # Package: Meta
  #
  # Description: Displays the complete form required for a new user to register an account with the application.
  #              The view collects essential personal and security credentials to create a new user resource.
  #
  # Usage: - What: Renders the interface necessary for users to create a new account within the investment platform.
  #                It includes fields for email, full name, and password creation.
  #        - How: Accessed through the registration sign-up route (GET /users/sign_up).
  #               Submits the collected data via a POST request to the registration path to create a new user.
  #        - Why: Provides the primary entry point for new customers to begin using the application's investment features.
  %>
<%= render 'partials/route/auth/wrapper' do %>
  <%= render 'partials/route/auth/background',
             bg_path: "pixeltrue/finance-app-1-67.svg"
  %>
  <%= render 'partials/route/auth/container',
             welcome_message: "Seja bem-vindo à Meta".html_safe,
             welcome_feedback: "Crie sua conta em poucos minutos e desbloqueie o potencial máximo da sua carteira de investimentos" do
  %>
    <%= form_for(resource,
                 as: resource_name,
                 url: registration_path(resource_name)) do |f|
    %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :email,
                 label: "Informe seu e-mail",
                 field_type: :email_field,
                 placeholder: "seuemail@email.com",
                 desc: "Informe um e-mail válido",
                 icon_name: "mail"
      %>
      <%= render 'partials/modules/separator' %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :first_name,
                 label: "Primeiro nome",
                 field_type: :text_field,
                 placeholder: "Maria",
                 desc: "Informe seu primeiro nome",
                 icon_name: "person_text"
      %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :last_name,
                 label: "Último nome",
                 field_type: :text_field,
                 placeholder: "Silva",
                 desc: "Informe seu último nome",
                 icon_name: "person_text"
      %>
      <%= render 'partials/modules/separator' %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :password,
                 label: "Crie uma senha",
                 field_type: :password_field,
                 placeholder: "SuaSenha123@",
                 desc: "Crie uma senha segura com, pelo menos, 6 caracteres",
                 icon_name: "passkey"
      %>
      <%= render "partials/modules/input-field",
                 f: f,
                 name: :password_confirmation,
                 label: "Confirme sua senha",
                 field_type: :password_field,
                 placeholder: "SuaSenha123@",
                 desc: "Repita sua senha",
                 icon_name: "passkey"
      %>
      <%= f.submit "Criar conta", class: "button w-full" %>
    <% end %>
  <% end %>
<% end %>