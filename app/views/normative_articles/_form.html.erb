<%#
  # Partial: _form.html
  # Date: 12/4/2025
  # Author: Moisés Reis
  # Package: NormativeArticles
  #
  # Description: Defines the input structure and submission mechanism for the
  #              NormativeArticle resource. It includes fields for article name,
  #              number, body, description, and benchmark target.
  #
  # Usage: - What: Renders the standardized form necessary for creating or
  #                updating a NormativeArticle object. It requires the
  #                'normative_article' model instance to be passed as a local
  #                variable.
  #        - How: Utilizes the Rails `form_with` helper and reuses common input
  #               partials for consistent layout and behavior.
  #        - Why: Provides a reusable and structured input mechanism for the
  #               NormativeArticle resource.
  %>
<%= form_with(model: normative_article, class: "contents") do |form| %>
  <%= render "partials/modules/input-field",
             f: form,
             name: :article_name,
             label: "Nome do Artigo",
             placeholder: "Regras de Governança",
             is_half_width: true,
             desc: "Forneça um nome claro e objetivo.",
             field_type: :text_field,
             icon_name: "file-text"
  %>

  <%= render "partials/modules/input-field",
             f: form,
             name: :article_number,
             label: "Número do Artigo",
             placeholder: "12-B",
             is_half_width: true,
             desc: "Número ou identificador oficial do artigo.",
             field_type: :text_field,
             icon_name: "hash"
  %>

  <%= render "partials/modules/separator" %>

  <%= render "partials/modules/input-field",
             f: form,
             name: :article_body,
             label: "Conteúdo do Artigo",
             placeholder: "Descreva a norma em detalhes...",
             is_half_width: false,
             desc: "Texto completo ou corpo do artigo.",
             field_type: :text_area,
             icon_name: "align-left"
  %>

  <%= render "partials/modules/input-field",
             f: form,
             name: :description,
             label: "Descrição",
             placeholder: "Informações adicionais sobre a norma.",
             is_half_width: false,
             desc: "Descrição complementar ou contexto.",
             field_type: :text_area,
             icon_name: "info"
  %>

  <%= render "partials/modules/separator" %>

  <%= render "partials/modules/input-field",
             f: form,
             name: :benchmark_target,
             label: "Benchmark Target",
             placeholder: "0 a 1000",
             is_half_width: true,
             desc: "Meta de benchmark atribuída ao artigo.",
             field_type: :number_field,
             icon_name: "target"
  %>

  <%= form.button :submit,
                  name: nil,
                  class: "button button-primary w-fit flex items-center gap-2" do %>
    <%= inline_svg_tag "icons/#{icon_name}.svg" %>
    <%= content_tag :span, button_name %>
  <% end %>
<% end %>