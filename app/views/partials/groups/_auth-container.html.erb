<section class="flex flex-col items-start justify-center col-span-3 h-full min-h-screen w-2/3 gap-9 overflow-x-hidden m-auto py-6">
  <div class="absolute top-3 right-3">
    <%= render 'partials/modules/logo' %>
  </div>
  <div class="flex flex-col items-start justify-start gap-1.5 w-1/3">
    <%= content_tag :h1, welcome_message, class: "text-heading font-heading text-4xl font-bold text-left" %>
    <%= content_tag :p, welcome_feedback, class: "text-muted font-body text-base font-normal text-left" %>
  </div>
  <div class="flex flex-col items-start justify-center w-1/3 gap-3">
    <%= yield %>
    <%= render "devise/shared/links" %>
  </div>
</section>